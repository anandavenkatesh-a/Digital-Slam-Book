<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/sign_up.css">
    <script src="https://kit.fontawesome.com/62ef345795.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div>
              <h1><img src="/images/icon2.png" id = 'heading-icon'> DSbook</h1>
              <div>
                    <p id="type-writter">
                    </p>
                    <span id="type-writter-cursor">|</span>
              </div>
        </div>
    </header>
    <div id = 'form-container'>
        <form action="/user/create" method="post">
            <span>Sign Up <i class="fa-solid fa-user"></i></span>
            <input type="text" name="email"  required placeholder="Email">
            <input type="text" name="name" required placeholder="Name">
            <div id="username-warning"><i class="fa-solid fa-triangle-exclamation"></i> user name already exists</div>
            <input type="password" name="password" required placeholder="Password">
            <div id="pass-str">
                <div id="low-str"></div>
                <div id="med-str"></div>
                <div id="str-str"></div>
            </div>
            <input type="password" name="confirm_password" required placeholder="Confirm Password">
            <button>Sign Up</button>
        </form>
    </div>
    <img src="/images/icon.gif" id="dec-images">
    <i class="fas fa-thin fa-file-heart" id='card-logo'></i>
    <i class="fa-solid fa-heart" id = 'heart-logo'></i>
    <i class="fa-solid fa-heart" id = 'heart-logo3'></i>
    <i class="fa-solid fa-heart" id = 'heart-logo2'></i>

</body>
